<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog</title>
    <link rel="stylesheet" href="/stylesheets/style.css" media="screen" title="no title" charset="utf-8">
    <script type="text/javascript" src="/KindEditor/kindeditor-min.js"></script>
    <script type="text/javascript">
        var editor;
        KindEditor.ready(function (K) {
            // editor = K.create('textarea', {
            //     allowImageUpload: false,
            //     items: [
            //         'fontname', 'fontsize','|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline', 'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright', 'insertorderedlist', 'insertunorderedlist', '|', 'emoticons', 'image', 'link'
            //     ]
            // });
            window.editor = K.create('textarea');
        });
    </script>
</head>
<body>
    <header>
        <h1>{{title}}</h1>
    </header>
    <nav>
        <span>
            <a href="/" title="主页">home</a>
        </span>
        <span>
            <a href="/archive" title="存档">存档</a>
        </span>
        <span>
            <a href="/tags" title="标签">标签</a>
        </span>
        <span>
            <a href="/links" title="友情链接">links</a>
        </span>
        {{#if user}}
        <span>
            <a href="/upload" title="上传">upload</a>
        </span>
        <span>
            <a href="/publish" title="发表">post</a>
        </span>
        <span>
            <a href="/logout" title="登陆">logout</a>
        </span>
        {{ else }}
        <span>
            <a href="/login" title="登陆">login</a>
        </span>
        <span>
            <a href="/reg" title="注册">register</a>
        </span>
        {{/if}}
        <span>
            <form class="" action="/search" method="GET">
                <input type="text" name="keyword" placeholder="SEARCH" class="search" />
            </form>
        </span>
    </nav>
    <article>
        {{#if success }}
            <div>{{success}}</div>
        {{/if}}
        {{#if error }}
            <div>{{error}}</div>
        {{/if}}
    </article>
    {{{body}}}
</body>
</html>
